generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id       Int    @id @default(autoincrement())
  name     String
  password String
  roleId   Int
}

// 角色表
model Role {
  id       Int    @id @default(autoincrement())
  name     String @unique
  menuList Json?
}

// 新闻动态表
model News {
  id     Int    @id @default(autoincrement())
  title  String @db.VarChar(255)
  desc   String @db.Text
  imgUrl String @db.VarChar(2083)
}

// 项目表
model List {
  id     Int    @id @default(autoincrement())
  title  String @db.VarChar(255)
  desc   String @db.Text
  imgUrl String @db.VarChar(2083)
}

// 订单表
model Order {
  id             Int    @id @default(autoincrement())
  name           String
  gender         String
  email          String @unique
  tel            String
  serviceType    String
  specifications String
  date           String
}
